@model psiconexao.Models.Psicologo

@{
    ViewData["Title"] = "Editar Perfil de " + Model.Nome;
}

<link rel="stylesheet" href="~/css/psicologoPerfil.css" />
<link rel="stylesheet" href="~/css/psicologoLista.css" />
<link rel="stylesheet" href="~/css/psicologoEditar.css" />

<div class="profissional">
    <div class="card profissional-card">
        <div class="profissional-content">
            <h2>Editar Perfil</h2>
            <div class="separator-2"></div>
            <form asp-action="Editar" class="profissional-card-info">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-wrap-2 justify-content-between">
                    <h4 class="full-size mt-2">Dados Pessoais</h4>
                    <div class="info-form">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="edit-input" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="UrlFoto" class="control-label">URL da Foto de Perfil</label>
                        <input asp-for="UrlFoto" class="edit-input"/>
                        <span asp-validation-for="UrlFoto" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="edit-input" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="edit-input" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
                <div class="separator-2"></div>
                <hr />
                <div class="separator-2"></div>
                <div class="card-wrap-2 justify-content-between">
                    <h4 class="full-size">Dados Profissionais</h4>
                    <div class="info-form">
                        <label asp-for="Crp" class="control-label"></label>
                        <input asp-for="Crp" class="edit-input" />
                        <span asp-validation-for="Crp" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="PrecoConsulta" class="control-label">Preço da Consulta</label>
                        <input asp-for="PrecoConsulta" class="edit-input" />
                        <span asp-validation-for="PrecoConsulta" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="TEspecialidade" class="control-label"></label>
                        <select asp-for="TEspecialidade" class="edit-input" asp-items="@(new SelectList(Enum.GetValues(typeof(Psicologo.TipoEspecialidade))))">
                            <option value="">Selecione uma especialidade</option>
                        </select>
                        <span asp-validation-for="TEspecialidade" class="text-danger"></span>
                    </div>
                    <div class="info-form">
                        <label asp-for="TAbordagem" class="control-label"></label>
                        <select asp-for="TAbordagem" class="edit-input" asp-items="@(new SelectList(Enum.GetValues(typeof(Psicologo.TipoAbordagem))))">
                            <option value="">Selecione uma especialidade</option>
                        </select>
                        <span asp-validation-for="TAbordagem" class="text-danger"></span>
                    </div>
                    <div class="info-textarea">
                        <label asp-for="Biografia" class="control-label"></label>
                        <textarea asp-for="Biografia" class="form-textarea"></textarea>
                        <span asp-validation-for="Biografia" class="text-danger"></span>
                    </div>
                   <input type="hidden" asp-for="UsuarioId" />
                   <input type="hidden" asp-for="Password" value="Password" />
                </div>
                <div class="m-auto pt-4 card-col-2 align-items-center">
                    <input type="submit" value="Salvar" class="button" />
                    <a href="/Psicologo/Perfil/@Model.UsuarioId">Voltar para Perfil</a>
                </div>
            </form>
        </div>
    </div>
</div>

